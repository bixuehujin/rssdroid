<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.hujin.rss.reader"
    android:installLocation="preferExternal"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SearchResultActivity"
            android:label="@string/title_activity_search_result" >
        </activity>
        <activity
            android:name=".AddFeedActivity"
            android:label="@string/title_activity_add_feed" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".FeedListActivity"
            android:label="@string/title_activity_feed_list" >
        </activity>
        <activity
            android:name=".FeedViewActivity"
            android:label="@string/title_activity_feed_view" >
        </activity>
        <activity
            android:name=".FeedInfoActivity"
            android:label="@string/title_activity_feed_info" >
        </activity>
    </application>

</manifest>